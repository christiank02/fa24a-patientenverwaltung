<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="appconfig.xsd">

    <connections>

        <dbConnections>
            <dbConnection type="sqlite">
                <url>/resources/files/Patientenverwaltung.db3</url>
            </dbConnection>
        </dbConnections>

        <fileConnections>
            <fileConnection model="patient">
                <file type="xml">src/main/resources/files/patienten.xml</file>
                <file type="csv">src/main/resources/files/patienten.csv</file>
            </fileConnection>
            <fileConnection model="pflegekraft">
                <file type="xml">src/main/resources/files/pflegekraefte.xml</file>
            </fileConnection>
            <fileConnection model="behandlung">
                <file type="xml">src/main/resources/files/behandlungen.xml</file>
            </fileConnection>
            <fileConnection model="leistung">
                <file type="xml">src/main/resources/files/leistungen.xml</file>
                <file type="csv">src/main/resources/files/leistungen.csv</file>
            </fileConnection>
        </fileConnections>

    </connections>

    <dataSources>
        <dataSource model="patient" source="db" type="sqlite" />
        <dataSource model="pflegekraft" source="db" type="sqlite" />
        <dataSource model="behandlung" source="file" type="xml" />
        <dataSource model="leistung" source="file" type="csv" />
    </dataSources>


</configuration>